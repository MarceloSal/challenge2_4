<h1>Listando Municipes</h1>
 <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                
                <th>#</th>
                <th>Nome</th>
                <th>Sobrenome</th>
                <th>CPF</th>
                <th>CNS</th>
                <th>Email</th>
                <th>Data de anivers√°rio</th>
                <th>Telefone</th>
                <th>Status</th>
                <th>
                  <%=link_to new_admins_backoffice_citizen_path, class:"btn btn-success btn-circle" do%>
                     <i class="fas fa-plus"></i>
                  <%end%>
                </th>
            </tr>
            
        </thead>
            
        <tbody>
            <% @citizens.each do |citizen| %>
                <tr>
                    <td><%= citizen.id %></td>
                    <td><%= citizen.first_name %></td>
                    <td><%= citizen.last_name %></td>
                    <td><%= citizen.cpf %></td>
                    <td><%= citizen.cns %></td>
                    <td><%= citizen.email %></td>
                    <td><%= citizen.birthday %></td>
                    <td><%= citizen.phone %></td>
                    <td><%= citizen.status %></td>
                    <td style="width: 10em">
                        <%= link_to edit_admins_backoffice_citizen_path(citizen), class:"btn btn-primary btn-circle" do %>
                             <i class="fa fa-edit"></i>
                        <% end %>
                        <%= link_to admins_backoffice_citizen_path(citizen), method: :delete, class: "btn btn-danger btn-circle", 
                             data: { confirm: "Deseja realmente excluir?" } do %>
                             <i class="fa fa-minus"></i>
                        <% end %>
                        
                    </td>
                </tr>
            <% end %>
       </tbody>
   </table>
 </div>