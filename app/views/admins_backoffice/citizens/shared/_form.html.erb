

<style>
        @media (max-width:554px){
            .respons{
                font-size:2em;
            }
        }
</style>

<style>
        @media (max-width:390px){
            .respons{
                font-size:1em;
            }
        }
</style>
<style>
  .red {
    color: red;
  }
</style>

<div class="x_panel">
    <div class="x_title">
        <h1 class="respons"><%=action_message%></h1>
        
        <div class="clearfix"></div>
    </div>
    <%if @citizen.errors.any?%>
        <div class="alert alert-danger alert-dismissible " role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span>
            </button>
            <ul>
               <% @citizen.errors.full_messages.each do |message| %>
                 <li><%=message%></li>
               <%end%>
            </ul>
        </div>
    <%end%>
    <div class="x_content">

        <!-- start form for validation -->
        
        <%= form_with(model: [ :admins_backoffice, @citizen ], local: true) do |form| %>
            
           
            <%=form.label :first_name  %><span class= 'red'>*</span>
            <%=form.text_field :first_name , id: "first_name", class:"form-control" %>
            <%=form.label :last_name%><span class= 'red'>*</span>
            <%=form.text_field :last_name , id: "last_name", class:"form-control" %>
            <%=form.label :cpf%><span class= 'red'>*</span>
            <%=form.text_field :cpf, id: "cpf", class:"form-control" %>
            <%=form.label :cns%><span class= 'red'>*</span>
            <%=form.text_field :cns, id:"cns", class:"form-control" %>
            <%=form.label :email%><span class= 'red'>*</span>
            <%=form.text_field :email, id: "email", class:"form-control" %>
            <%=form.label :birthday%><span class= 'red'>*</span>
            <%=form.text_field :birthday, id: "birthday", class:"form-control datepicker" %>
            <%=form.label :phone%><span class= 'red'>*</span>
            <%=form.text_field :phone, id: "phone", class:"form-control" %>
            <%=form.label :status%><span class= 'red'>*</span>
            <%=form.text_field :status, id:"status", class:"form-control" %>
           

            <%=form.fields_for :citizen_address do |address_form|%>
                <%=address_form.label :zip_code%> <span class= 'red'>*</span>
                <%=address_form.text_field :zip_code, id:"cep", class:"form-control" %>
                <%=address_form.label :public_place%><span class= 'red'>*</span>
                <%=address_form.text_field :public_place, id: "rua", class:"form-control" %>
                <%=address_form.label :complement%><span class= 'red'>*</span>
                <%=address_form.text_field :complement, id:"complemento", class:"form-control" %>
                <%=address_form.label :district%><span class= 'red'>*</span>
                <%=address_form.text_field :district, id: "bairro", class:"form-control" %>
                <%=address_form.label :city%><span class= 'red'>*</span>
                <%=address_form.text_field :city, id: "cidade", class:"form-control" %>
                <%=address_form.label :federative_unit%><span class= 'red'>*</span>
                <%=address_form.text_field :federative_unit, id: "uf", class:"form-control" %>
                <%=address_form.label :ibge%><span class= 'red'>*</span>
                <%=address_form.text_field :ibge, id: "ibge", class:"form-control" %>
            <%end%>

            
           
            <br>
            <button type='submit' class="btn btn-primary">Salvar</button>
            <%=link_to 'Voltar', admins_backoffice_citizens_path, class:"btn btn-primary"%>

        <%end%>
        <!-- end form for validations -->
        
    </div>
</div>